<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @question.user_id %>
</p>

<p>
  <strong>Type:</strong>
  <%= @question.type %>
</p>

<% if @question.answers.count > 0 %>

	<% @question.answers.each do |answer| %>

		<%= answer.body %>

	<% end %>

<%end%>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
