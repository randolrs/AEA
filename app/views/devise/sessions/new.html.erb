<div class="login-stage">

	<div class="login-container light">

		<span class="login-shadow"></span>

		<div class="login-panel">

			<h2 class="light">LoudSpeaker</h2>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

			  <%= devise_error_messages! %>

			  <%= f.email_field :email, autofocus: true, placeholder:"Email", class: "login-field light" %><br>

			   <%= f.password_field :password, autocomplete: "off", placeholder:"Password", class: "login-field light" %><br>

			  <div><%= f.submit "Login", class: "login-submit" %></div>

			<% end %>

			<%# render "devise/shared/links" %>

		</div>

	</div>

</div>
